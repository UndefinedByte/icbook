<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson_0"
    android:background="@drawable/app_background_lessons">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/l0_t0"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:gravity="center|top"
            android:shadowColor="#000"
            android:shadowDx="3"
            android:shadowDy="3"
            android:shadowRadius="4"
            android:text="Здравствуй"
            android:textColor="#fff"
            android:textSize="35sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/l0_t1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:text="Спасибо, что скачал ICBook! Этот учебник поможет тебе писать моды на Inner Core для Minecraft Pocket Edition! Вы можете прочитать нужный урок, скопировать нужный код, вставить его в свой мод и проверить в Inner Core. Пока уроков маловато, но приложение будет обновляться. Возможно, именно ты скоро напишешь неплохой глобальный мод."
            android:textColor="#fff"
            android:textSize="19sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/l0_t2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:gravity="center|bottom"
            android:text="Желаем удачи в освоении моддинга!\nRegion[0] Company"
            android:textColor="#fff"
            android:textSize="19.5sp"
            android:textStyle="bold"/>

    </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/app_header" />

    <TextView
        android:id="@+id/txt_in_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:gravity="center|top"
        android:shadowColor="#000"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Введение"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"/>

</android.support.constraint.ConstraintLayout>