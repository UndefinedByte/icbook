<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lesson_1_1"
    android:background="@drawable/app_background_lessons">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/myview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/l1_1_t0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t0"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/l1_1_t1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t1"
                android:textColor="#0df"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/l1_1_t4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t4"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/l1_1_t5"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t5"
                android:textColor="#0df"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/l1_1_t6"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t6"
                android:textColor="#fff"
                android:textSize="19sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/l1_1_t7"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="5dp"
                android:text="@string/l1_1_t7"
                android:textColor="#0df"
                android:textSize="19sp"
                android:textStyle="bold"/>
        </LinearLayout>
    </ScrollView>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:src="@drawable/app_header"
        android:clickable="true"
        android:onClick="onClickHeader"/>

    <TextView
        android:id="@+id/txt_less_title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Создание еды"
        android:layout_marginTop="10dp"
        android:gravity="center|top"
        android:textColor="@android:color/background_light"
        android:textSize="25sp"
        android:textStyle="bold"
        android:shadowColor="#000"
        android:shadowRadius="1"
        android:shadowDx="1"
        android:shadowDy="1"/>
</android.support.constraint.ConstraintLayout>